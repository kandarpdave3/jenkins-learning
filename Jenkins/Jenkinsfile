pipeline {
    agent {
        docker {
            image 'node:latest-slim'
        }
    }

    stages {
        stage('Install NPM') { 
            steps {
                sh 'cd hello-react && npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'cd hello-react && npm build'
            }
        }
    }
}
