pipeline {
    agent {
        docker {
            image 'node:lts-buster-slim'
            args '-p 3000:3000'
        }
    }
    environment {
        CI = 'true'
    }

    stages {
        stage('Install NPM') { 
            steps {
                sh 'cd hello-react && npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'cd hello-react && npm build'
            }
        }
    }
}
